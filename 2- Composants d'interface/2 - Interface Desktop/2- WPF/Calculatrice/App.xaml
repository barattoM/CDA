<Application x:Class="Calculatrice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculatrice"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <LinearGradientBrush x:Key="CalcBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
            <GradientStop Color="#FF8D3A3A" Offset="0.663"/>
        </LinearGradientBrush>
        <RadialGradientBrush x:Key="buttonNum">
            <GradientStop Color="#FF7890C3" Offset="1"/>
            <GradientStop Color="White" Offset="0.605"/>
        </RadialGradientBrush>
        <RadialGradientBrush x:Key="buttonOpe">
            <GradientStop Color="#FFC0C378" Offset="1"/>
            <GradientStop Color="White" Offset="0.605"/>
        </RadialGradientBrush>

    </Application.Resources>
</Application>
